# Configurações da Aplicação
APP_NAME=Sistema de Monitoramento Solar
DEBUG=false
SECRET_KEY=solar_monitoring_secret_key_2024

# Banco de Dados
DATABASE_URL=sqlite:///./solar_monitoring.db
# Para PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/solar_monitoring

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Modbus - Inversor
INVERTER_HOST=192.168.1.100
INVERTER_PORT=502
INVERTER_ADDRESS=1
INVERTER_TIMEOUT=5

# Modbus - Logger
LOGGER_HOST=192.168.0.101
LOGGER_PORT=502
LOGGER_ADDRESS=2
